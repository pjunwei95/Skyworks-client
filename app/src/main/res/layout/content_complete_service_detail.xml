<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="io.garuda.skyworks.Activities.CompleteServiceDetail"
    tools:showIn="@layout/activity_complete_service_detail">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="-102dp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:baselineAligned="false"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/image"
                            android:layout_width="match_parent"
                            android:layout_height="150dp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:baselineAligned="false"
                            android:orientation="vertical">


                            <TextView
                                android:id="@+id/name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/activity_smaller_margin"
                                android:layout_marginTop="@dimen/activity_small_margin"
                                android:textColor="@color/colorPrimaryDarker"
                                android:textSize="@dimen/content_text_big"
                                android:textStyle="bold"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/activity_smaller_margin"
                                android:layout_marginTop="@dimen/activity_normal_margin"
                                android:text="License Number"
                                android:textColor="@color/colorPrimaryDark"
                                android:textSize="@dimen/content_text_small" />

                            <TextView
                                android:id="@+id/license"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/activity_smaller_margin"
                                android:layout_marginTop="@dimen/activity_small_margin"
                                android:textColor="@color/colorPrimary"
                                android:textSize="@dimen/content_text_small" />

                        </LinearLayout>

                    </RelativeLayout>
                </LinearLayout>

            </RelativeLayout>


            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="@dimen/activity_smaller_margin"
                android:paddingBottom="@dimen/activity_smaller_margin">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.25"
                    android:text="Job Type"
                    android:textSize="@dimen/content_text"
                    android:textColor="@color/colorPrimary"
                    android:paddingLeft="@dimen/activity_smaller_margin"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.75"
                    android:orientation="horizontal"
                    >

                    <TextView
                        android:id="@+id/jobType"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="0.25"
                        android:text="Job Type"
                        android:textSize="@dimen/content_text"
                        android:textColor="@color/colorPrimaryDarker"
                        android:paddingLeft="@dimen/activity_smaller_margin"/>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="@dimen/activity_smaller_margin"
                android:paddingBottom="@dimen/activity_smaller_margin">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.25"
                    android:text="Date"
                    android:textSize="@dimen/content_text"
                    android:textColor="@color/colorPrimary"
                    android:paddingLeft="@dimen/activity_smaller_margin"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.75"
                    android:orientation="horizontal"
                    >

                    <TextView
                        android:id="@+id/date"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.75"
                        android:ems="10"
                        android:textSize="@dimen/content_text"
                        android:textColor="@color/colorPrimaryDarker"
                        android:paddingLeft="@dimen/activity_smaller_margin"/>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="@dimen/activity_smaller_margin"
                android:paddingBottom="@dimen/activity_smaller_margin">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.25"
                    android:text="Time"
                    android:textSize="@dimen/content_text"
                    android:textColor="@color/colorPrimary"
                    android:paddingLeft="@dimen/activity_smaller_margin"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.75"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/time"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.75"
                        android:ems="10"
                        android:textSize="@dimen/content_text"
                        android:textColor="@color/colorPrimaryDarker"
                        android:paddingLeft="@dimen/activity_smaller_margin"/>

                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="@dimen/activity_smaller_margin"
                android:paddingBottom="@dimen/activity_smaller_margin">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.25"
                    android:text="Special Requests"
                    android:textSize="@dimen/content_text"
                    android:textColor="@color/colorPrimary"
                    android:paddingLeft="@dimen/activity_smaller_margin"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.75"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/specialRequest"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:textSize="@dimen/content_text_small"
                        android:textColor="@color/colorPrimaryDarker"
                        android:paddingLeft="@dimen/activity_smaller_margin"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="@dimen/activity_smaller_margin"
                android:paddingBottom="@dimen/activity_smaller_margin">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.25"
                    android:text="Price"
                    android:textSize="@dimen/content_text_big"
                    android:textColor="@color/colorPrimary"
                    android:paddingLeft="@dimen/activity_smaller_margin"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.75"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/price"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.75"
                        android:ems="10"
                        android:textSize="@dimen/content_text_big"
                        android:textColor="@color/colorPrimaryDarker"
                        android:paddingLeft="@dimen/activity_smaller_margin"/>

                </LinearLayout>
            </LinearLayout>





        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>
