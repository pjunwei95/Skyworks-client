<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    tools:context="io.garuda.skyworks.Fragments.CCSecureCodeFragment">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_vertical_margin"
        android:layout_marginRight="@dimen/activity_vertical_margin"
        card_view:cardCornerRadius="1dp"
        card_view:elevation="4dp"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:cardBackgroundColor="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:textSize="@dimen/large_text"
                android:textColor="@color/colorPrimaryDarker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/items_inbetween"
                android:padding="@dimen/items_inbetween_medium"
                android:textStyle="bold"
                android:text="@string/card_cvv"/>

            <io.garuda.skyworks.CustomViews.CreditCardEditText
                android:id="@+id/et_cvv"
                android:hint="CVV/CVC"
                android:inputType="number"
                android:maxLength="3"
                android:layout_marginLeft="@dimen/items_inbetween"
                android:layout_marginRight="@dimen/items_inbetween"
                android:layout_marginTop="@dimen/items_inbetween"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimaryDark"
                android:paddingLeft="@dimen/items_inbetween_medium"/>

        </LinearLayout>

    </android.support.v7.widget.CardView>


</FrameLayout>
